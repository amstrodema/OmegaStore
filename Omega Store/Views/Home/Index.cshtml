@model Store.Model.ViewModel.MainVM
@using Omega_Store.Services;
@inject LoginValidator loginValidator
@{
    ViewData["Title"] = "Home Page";
    int slideCount = 0;
    var store = await loginValidator.GetShop();
}

<!-- Carousel Start -->
<div class="container-fluid mb-3">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Slides.Count(); i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#header-carousel" data-slide-to="@i"></li>
                        }
                    }
                </ol>
                <div class="carousel-inner">
                    @foreach (var slide in Model.Slides)
                    {
                        if (slideCount == 0)
                        {
                            <div class="carousel-item position-relative active" style="height: 430px;">
                                <img class="position-absolute w-100 h-100" src="@slide.Image" style="object-fit: cover;">
                                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                    <div class="p-3" style="max-width: 700px;">
                                        @if (!string.IsNullOrEmpty(slide.Caption))
                                        {
                                            <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">@slide.Caption</h1>
                                        }
                                        @if (!string.IsNullOrEmpty(slide.Desc))
                                        {
                                            <p class="mx-md-5 px-5 animate__animated animate__bounceIn">@slide.Desc</p>
                                        }
                                        @if (!string.IsNullOrEmpty(slide.Link) && !string.IsNullOrEmpty(slide.Link))
                                        {
                                            <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="@slide.Link">@slide.Action</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item position-relative" style="height: 430px;">
                                <img class="position-absolute w-100 h-100" src="@slide.Image" style="object-fit: cover;">
                                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                    <div class="p-3" style="max-width: 700px;">
                                        @if (!string.IsNullOrEmpty(slide.Caption))
                                        {
                                            <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">@slide.Caption</h1>
                                        }
                                        @if (!string.IsNullOrEmpty(slide.Desc))
                                        {
                                            <p class="mx-md-5 px-5 animate__animated animate__bounceIn">@slide.Desc</p>
                                        }
                                        @if (!string.IsNullOrEmpty(slide.Link) && !string.IsNullOrEmpty(slide.Link))
                                        {
                                            <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="@slide.Link">@slide.Action</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        }

                        slideCount++;
                    }
                   
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            @if (Model.Offers != null && Model.Offers.Count() > 0 && Model.Offers[0] != null)
            {
                <div class="product-offer mb-30" style="height: 200px;">
                    <img class="img-fluid" src="@Model.Offers[0].Image" alt="">
                    <div class="offer-text">
                        <h6 class="text-white text-uppercase">@Model.Offers[0].DiscountCaption</h6>
                        <h3 class="text-white mb-3">@Model.Offers[0].Caption</h3>
                        <a href="@Model.Offers[0].Link" class="btn btn-primary">@Model.Offers[0].Action</a>
                    </div>
                </div>
            }
            @if (Model.Offer != null)
            {
                <div class="product-offer mb-30" style="height: 200px;">
                    <img class="img-fluid" src="@Model.Offer.Image" alt="">
                    <div class="offer-text">
                        <h6 class="text-white text-uppercase">@Model.Offer.DiscountCaption</h6>
                        <h3 class="text-white mb-3">@Model.Offer.Caption</h3>
                        <a href="@Model.Offer.Link" class="btn btn-primary">@Model.Offer.Action</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Carousel End -->
<!-- Featured Start -->
@if(store.Level > 4)
{
    <div class="container-fluid pt-5">
        <div class="row px-xl-5 pb-3">
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fa fa-check text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">Quality Product</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fa fa-shipping-fast text-primary m-0 mr-2"></h1>
                    <h5 class="font-weight-semi-bold m-0">Free Shipping</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fas fa-exchange-alt text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">14-Day Return</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fa fa-phone-volume text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">24/7 Support</h5>
                </div>
            </div>
        </div>
    </div>

}
<!-- Featured End -->
<!-- Categories Start -->
<div class="container-fluid pt-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Categories</span></h2>
    <partial name="_categories" model="Model" />
</div>
<!-- Categories End -->
<!-- Featured Products Start -->
@if(store.Level > 4)
{
    @if (Model.Featured.Count() > 0)
    {
        <div class="container-fluid pt-5 pb-3">
            <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Featured Products</span></h2>
            <div class="row px-xl-5">
                @foreach (var item in Model.Featured)
                {
                    <div class="col-lg-3 col-md-4 col-6 pb-1">
                        <div class="product-item bg-light mb-4">
                            <div class="product-img position-relative overflow-hidden">
                                <img class="img-fluid w-100" src="@item.Image" alt="">
                                <div class="product-action">
                                    <a class="btn btn-outline-dark btn-square" onclick="AddToCart('@item.ID','1')"><i class="fa fa-shopping-cart"></i></a>
                                    <a class="btn btn-outline-dark btn-square" onclick="ToggleFave('@item.ID')"><i class="fa fa-heart"></i></a>
                                    <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-sync-alt"></i></a>
                                    <a class="btn btn-outline-dark btn-square" asp-action="item" asp-controller="shop" asp-route-t="@item.Tag"><i class="fa fa-search"></i></a>
                                </div>
                            </div>
                            <div class="text-center py-4">
                                <a class="h6 text-decoration-none text-truncate" asp-action="item" asp-controller="shop" asp-route-t="@item.Tag">@item.Title</a>
                                <div class="d-flex align-items-center justify-content-center mt-2">
                                    <h5>@item.CurrencySymbol@item.Price</h5> @if (item.OldPrice > 0)
                                    {
                                        <h6 class="text-muted ml-2"><del>@item.CurrencySymbol@item.OldPrice</del></h6>
                                    }
                                </div>
                                <div class="d-flex align-items-center justify-content-center mb-1">
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small>(99)</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    }
    else
    {
        <div class="container-fluid pt-5 pb-3">
            <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Featured Products</span></h2>
            <div class="row">
                <partial name="_nocontent" />
            </div>
        </div>
    }
}

<!-- Featured Products End -->
<!-- Offer Start -->
<div class="container-fluid pt-5 pb-3">
    <div class="row px-xl-5">

        @if (Model.Offers != null && Model.Offers.Count() > 0 && Model.Offers[1] != null)
        {
            <div class="col-md-6">
                <div class="product-offer mb-30" style="height: 300px;">
                    <img class="img-fluid" src="@Model.Offers[1].Image" alt="">
                    <div class="offer-text">
                        <h6 class="text-white text-uppercase">@Model.Offers[1].DiscountCaption</h6>
                        <h3 class="text-white mb-3">@Model.Offers[1].Caption</h3>
                        <a href="@Model.Offers[1].Link" class="btn btn-primary">@Model.Offers[1].Action</a>
                    </div>
                </div>
            </div>
        }
        @if (Model.Offers != null && Model.Offers.Count() > 0 && Model.Offers[2] != null)
        {
            <div class="col-md-6">
                <div class="product-offer mb-30" style="height: 300px;">
                    <img class="img-fluid" src="@Model.Offers[2].Image" alt="">
                    <div class="offer-text">
                        <h6 class="text-white text-uppercase">@Model.Offers[2].DiscountCaption</h6>
                        <h3 class="text-white mb-3">@Model.Offers[2].Caption</h3>
                        <a href="@Model.Offers[2].Link" class="btn btn-primary">@Model.Offers[2].Action</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- Offer End -->
<!-- Recent Products Start -->
@if (Model.Latest.Count() > 0)
{
    <div class="container-fluid pt-5 pb-3">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Recent Products</span></h2>
        <div class="row px-xl-5">
            @foreach (var item in Model.Latest)
            {
                <div class="col-lg-3 col-md-4 col-6 pb-1">
                    <div class="product-item bg-light mb-4">
                        <div class="product-img position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="@item.Image" alt="">
                            <div class="product-action">
                                <a class="btn btn-outline-dark btn-square" onclick="AddToCart('@item.ID','1')"><i class="fa fa-shopping-cart"></i></a>
                                <a class="btn btn-outline-dark btn-square" onclick="ToggleFave('@item.ID')"><i class="far fa-heart"></i></a>
                                <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-sync-alt"></i></a>
                                <a class="btn btn-outline-dark btn-square" asp-action="item" asp-controller="shop" asp-route-t="@item.Tag"><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                        <div class="text-center py-4">
                            <a class="h6 text-decoration-none text-truncate" asp-action="item" asp-controller="shop" asp-route-t="@item.Tag">@item.Title</a>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5>@item.CurrencySymbol@item.Price</h5> @if (item.OldPrice > 0)
                                {
                                    <h6 class="text-muted ml-2"><del>@item.CurrencySymbol@item.OldPrice</del></h6>
                                }
                            </div>
                            <div class="d-flex align-items-center justify-content-center mb-1">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if(item.Rating >= i)
                                    {
                                        <small class="fa fa-star text-primary mr-1"></small>
                                    }
                                    else
                                    {
                                        <small class="far fa-star text-primary mr-1"></small>
                                    }
                                }
                              
                                <small>(@item.Reviews)</small>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
}
else
{
    <div class="container-fluid pt-5 pb-3">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Recent Products</span></h2>
        <div class="row">
            <partial name="_nocontent" />
            </div>
            </div>
}
<!-- Recent Products End -->
<!-- Vendor Start -->
<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col">
            <div class="owl-carousel vendor-carousel">
                @foreach (var brand in Model.Brands)
                {
                    <div class="bg-light p-4">
                        <img src="@brand.Logo" alt="">
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Vendor End -->
